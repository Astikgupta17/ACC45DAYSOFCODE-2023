#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    
	    int num,a,b,district = 0,state = 0,tot;
	    cin>>num>>a>>b;
	    
	    string str;
	    cin>>str;
	    
	    for(int i=0;i<num;i++){
	        
	        if(str[i] =='0')
	            district++;
	        else
	            state++;
	    }
	    tot = district*a + state*b;
	    
	    cout<<tot<<endl;
	}
	return 0;
}
