#include <iostream>
using namespace std;

int main() {
	int t,n,i,j,p;
	cin>>t;
	while(t--){
	    cin>>n;
	    int A[n];
	    
	    for(i=0;i<n;i++){
	        A[i] =n ;
	        n--;
	    }
	       p=0;    
	    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if((A[i]+A[j])%2 !=0)
            p++;
            
            else
            p+=0;
        }
	  } 
	    cout<<p<<endl;
	}
	return 0;
}
